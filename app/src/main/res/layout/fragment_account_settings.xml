<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.profilePage.AccountSettingsFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvTitle"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="-20dp"
        app:cardBackgroundColor="#3D1B77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/cardview_gradient"/>

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="45dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/back_button_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="backButton" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textSize="33sp"
            android:textColor="@color/white"
            android:fontFamily="@font/altersan_bold"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="15"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/welcomebg"/>

    <LinearLayout
        android:id="@+id/editNameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/cvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/editname"
            android:layout_marginEnd="8dp"
            app:tint="#E6E6E6"/>

        <Button
            android:id="@+id/btEditName"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Edit Username"
            android:textSize="19sp"
            android:textAlignment="textStart"
            android:textColor="#E6E6E6"
            android:fontFamily="@font/altersan_semibold"
            android:background="@android:color/transparent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editEmailLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/editNameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/editemail"
            android:layout_marginEnd="8dp"
            app:tint="#E6E6E6"/>

        <Button
            android:id="@+id/btEditEmail"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Edit Email"
            android:textSize="19sp"
            android:textAlignment="textStart"
            android:textColor="#E6E6E6"
            android:fontFamily="@font/altersan_semibold"
            android:background="@android:color/transparent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/editchangePass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/editEmailLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/key"
            android:layout_marginEnd="8dp"
            app:tint="#E6E6E6"/>

        <Button
            android:id="@+id/btChangePassword"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Change Password"
            android:textSize="19sp"
            android:textAlignment="textStart"
            android:textColor="#E6E6E6"
            android:fontFamily="@font/altersan_semibold"
            android:background="@android:color/transparent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlCompat" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>