<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.profilePage.AccountSettingsFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvTitle"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="-20dp"
        app:cardBackgroundColor="#3D1B77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="45dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/back_button_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="backButton" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:fontFamily="@font/altersan_bold"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvEditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit name"
        android:textSize="13sp"
        android:fontFamily="@font/altersan"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvTitle"
        android:layout_marginTop="45dp"
        android:layout_marginStart="60dp"/>

    <EditText
        android:id="@+id/etEditName"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:includeFontPadding="true"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textSize="15sp"
        android:textColor="#707070"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/etregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEditName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvEditEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit email"
        android:textSize="13sp"
        android:fontFamily="@font/altersan"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEditName"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"/>

    <EditText
        android:id="@+id/etEditEmail"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:includeFontPadding="true"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textSize="15sp"
        android:textColor="#707070"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/etregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEditEmail"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCurrentPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter current password"
        android:textSize="13sp"
        android:fontFamily="@font/altersan"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEditEmail"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"/>

    <EditText
        android:id="@+id/etCurrentPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:includeFontPadding="true"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textSize="15sp"
        android:textColor="#707070"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/etregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentPass"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:textSize="13sp"
        android:fontFamily="@font/altersan"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCurrentPassword"/>

    <EditText
        android:id="@+id/etChangePassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:includeFontPadding="true"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textSize="15sp"
        android:textColor="#707070"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/etregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChangePassword"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvReTypePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-type password"
        android:textSize="13sp"
        android:fontFamily="@font/altersan"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etChangePassword"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"/>

    <EditText
        android:id="@+id/etReTypePassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:includeFontPadding="true"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textSize="15sp"
        android:textColor="#707070"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/etregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReTypePassword"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/altersan_bold"
        android:text="Save Changes"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#8A52E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etReTypePassword" />

</androidx.constraintlayout.widget.ConstraintLayout>