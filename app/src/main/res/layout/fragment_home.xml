<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.shop.HomeFragment"
    android:background="@drawable/welcomebg">


            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/altersan_semibold"
                android:text="InteriorVisionâ„¢"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:shadowColor="#101010"
                android:shadowDx="0"
                android:shadowDy="5"
                android:shadowRadius="10"/>

    <TextView
        android:id="@+id/searchbox"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        android:text="Search Here.."
        app:layout_constraintBottom_toTopOf="@id/scrollview2"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/altersan"
        android:textColor="#6E6E6E"
        android:textSize="18sp"
        android:gravity="bottom|left"
        android:paddingStart="20dp"
        android:paddingBottom="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/etlogin"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/searchbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="92dp"
        android:src="@drawable/search"
        app:tint="@color/white"
        android:clickable="true"/>


    <ScrollView
        android:background="#24093C"
        android:id="@+id/scrollview2"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="200dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/altersan_bold"
                android:shadowColor="#101010"
                android:shadowDx="0"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:layout_marginStart="30dp"
                android:text="Stores Directory"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/pagedesc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Look for the best furnitures on the most accessible and famous shops !"
                android:textColor="@color/white"
                android:fontFamily="@font/altersan"
                app:layout_constraintTop_toBottomOf="@id/pageTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:textSize="18sp"
                android:shadowColor="@color/black"
                android:shadowRadius="4"
                android:shadowDy="4"/>

            <HorizontalScrollView
                android:id="@+id/horiscroll"
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    app:layout_constraintTop_toBottomOf="@id/pagedesc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/casaitaliana"
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/store1"
                                    android:clickable="true"/>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/modelmisello"
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/store2"
                                    android:clickable="true"/>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/dolcevita"
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/store3"
                                    android:clickable="true"/>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/romarustico"
                                    android:layout_width="350dp"
                                    android:layout_height="200dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/store4"
                                    android:clickable="true"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

            <TextView
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/horiscroll"
                android:text="Scroll Left-Right to view stores."
                android:fontFamily="@font/altersan"
                android:textColor="#46FFFFFF"
                android:textSize="11sp"
                android:layout_marginStart="30dp"/>
            <TextView
                android:id="@+id/recommendedstore"
                android:layout_width="250dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/indicator"
                android:layout_marginTop="8dp"
                android:text="Recommended Store"
                android:fontFamily="@font/altersan_bold"
                android:shadowColor="#101010"
                android:shadowDx="0"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recommendedstore"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit ani."
                android:layout_marginBottom="50dp"
                android:justificationMode="inter_word"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>